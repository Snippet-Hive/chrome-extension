{
  "manifest_version": 3,
  "name": "Snippet Hive",
  "version": "0.1.0",
  "description": "Save and manage your AI generated code snippets",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "tabs",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_icon": "images/icon-128.png",
    "default_title": "Snippet Hive"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open Snippet Hive Sidebar"
    }
  },
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "key": ""
}
